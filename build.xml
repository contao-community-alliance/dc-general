<?xml version="1.0" encoding="UTF-8"?>
<project name="backboneit_dctableextended" default="build" basedir=".">
  
	<property name="build.dir" value="build" />
	<property name="build.module" value="${build.dir}/TL_ROOT/system/modules/backboneit_dctableextended" />
	<property name="minjs.dir" value="${build.module}/js" />
	<property name="minjs.keepsrc" value="true" />
	<property name="mincss.dir" value="${build.module}/css" />
	<property name="mincss.keepsrc" value="true" />

	<import file="ext/yui-compressor/yui.xml" />

	<target name="clean">
		<delete dir="${build.dir}" />
		<mkdir dir="${build.dir}/TL_ROOT" />
	</target>
	
	<target name="build" depends="clean">
		<copy todir="${build.dir}/TL_ROOT">
			<fileset dir="TL_ROOT" includes="**/*.php" />
			<filterchain>
				<headfilter lines="-1" skip="1" />
				<concatfilter prepend="publish/license_php.txt" />
			</filterchain>
		</copy>
		<copy todir="${build.dir}/TL_ROOT">
			<fileset dir="TL_ROOT" excludes="**/*.php" />
		</copy>

		<!-- dctableextended.js -->
		<antcall target="minjs"><param name="minjs.file"  value="dctableextended.js" /></antcall>
		
		<!-- dctableextended-2.9.js -->
		<antcall target="minjs"><param name="minjs.file"  value="dctableextended-2.9.js" /></antcall>
		
	  	<zip destfile="${build.dir}/backboneit_dctableextended.zip">
	  		<zipfileset dir="${build.dir}/TL_ROOT" />
	  	</zip>
	</target>
</project>